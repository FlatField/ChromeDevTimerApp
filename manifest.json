{
  "manifest_version": 3,
  "name": "Timer",
  "version": "1.0.0",
  "description": "シンプルでエレガントなフローティングタイマー",
  "permissions": [
    "storage",
    "notifications",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Timer"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

